{% extends 'base.html.twig' %}

{% block title %}
	User index
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="{{ asset('style.css') }}" rel="stylesheet"/>
	<link href="{{ asset('styleAdmin.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

	<h1>Comments</h1>

	{% for rating in ratings.items %}
    <div>
	{% set realvalue = rating.value/2 %}
        <h3>{{rating.series.title}}</h3>
        <p>{{realvalue}}</p>
        <p>{{rating.comment}}</p>
		<p>{{rating.user.email}}</p>
		<form method="post" action="{{ path('app_comments_validate', {'id': rating.id}) }}">
          <input type="submit" value="Validate">
      </form>
	  <form method="post" action="{{ path('app_comments_delete', {'id': rating.id}) }}">
          <input type="submit" value="Delete">
      </form>
    </div>
{% endfor %}
<div class="pagination">
    {{ knp_pagination_render(ratings) }}
</div>

{% endblock %}