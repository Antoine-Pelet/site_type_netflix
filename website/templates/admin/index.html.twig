{% extends 'base.html.twig' %}

{% block title %}
	User index
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="{{ asset('style.css') }}" rel="stylesheet"/>
	<link href="{{ asset('styleAdmin.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<form method="GET" style="width: 25%">
		<input type="text" name='email' id='email' placeholder="Type to search..">
		<button type="submit" class="searchbtn">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewbox="0 0 16 16">
				<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
			</svg>
		</button>
	</form>

<div class="test">
	<div class="panel">
		<table class="table">
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Register Date</th>
				<th>Admin</th>
				<th>Actions</th>
			</tr>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.name }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.registerDate ? user.registerDate|date('Y-m-d H:i:s') : '' }}</td>
					{% if user.admin == '0' %}
						<td class="text-danger">{{ user.admin ? 'Yes' : 'No' }}</td>
					{% else %}
						<td class="text-success">{{ user.admin ? 'Yes' : 'No' }}</td>
					{% endif %}
					{% if app.user %}
						{% if user.admin == '0' %}
							<td>
								<a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="text-success">↑</a>
								|
								<a href="?_switch_user={{user.email}}">Embody</a> | 
								<a href="{{ path('app_user_change_mdp', {'id': user.id}) }}">Edit</a>
							</td>
						{% else %}
							<td>
								<a href="{{ path('app_admin_remove', {'id': user.id}) }}" class="text-danger">↓</a>
								|
								<a href="?_switch_user={{user.email}}">Embody</a> | 
								<a href="{{ path('app_user_change_mdp', {'id': user.id}) }}">Edit</a>
							</td>
						{% endif %}
					{% endif %}
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Aucun utilisateurs inscrit.</td>
				</tr>
			{% endfor %}
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(users) }}
			</div>
		</table>

	</div>
</div>

{% endblock %}
