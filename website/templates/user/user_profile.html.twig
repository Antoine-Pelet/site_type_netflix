{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="{{ asset('style.css') }}" rel="stylesheet"/>
	<link href="{{ asset('styleSeries.css') }}" rel="stylesheet"/>
    <link href="{{ asset('styleAdmin.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
   
        <form method="GET">
            <input type="text" name='email' id='email' placeholder="Search..">
            <button type="submit">Submit</button>
        </form>

        <table class="table">
            <tr>
                <th>Série Likés</th>
            </tr>
        {% for s in series %}
            <tr>
                <td>{{ s.title }}</td>
            </tr>
        {% else %}
            <p>This user don't have any liked series.</p>
        {% endfor %}
        </table>

          <h1>Comments</h1>

        {% for r in rates %}
            <div class="comment">
         
                {%set vardiff = date("now" | date()).diff(date(r.getDate()))%}
                {%set note = r.getValue() / 2 %}
                <p>{{ r.getSeries().title}} - il y a {% if vardiff.days !=0 %} {{vardiff.days}} jours 
                    {% endif %} {{vardiff.h}} heures et {{vardiff.i}} minutes  - la notes est de {{note}}/5</p>
                <p>{{ r.getComment() }}</p>
            </div>
        {% endfor %}
{% endblock %}
