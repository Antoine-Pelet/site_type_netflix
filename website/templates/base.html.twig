<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="{{ asset('style.css') }}" rel="stylesheet" />
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                <li><a href="{{ path('app_default') }}"><img src="{{ 'ressources/' ~ 'logofull.png' }}"></a></li>
                -
                <li><a href="{{ path('app_series_index') }}">Séries</a></li>
                -
                {% if app.user %}
                    [{{ app.user.name }}]
                    <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% else %}
                    <li><a href="{{ path('app_register') }}">Inscription</a></li>
                    -
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
        </nav>
           
        <main>
        
        {% block body %}{% endblock %}

        </main>

                <footer>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">Accueil</a></li>
                        <li class="list-inline-item"><a href="#">Series</a></li>
                        <li class="list-inline-item"><a href="#">Admin</a></li>
                    </ul>
                    <a href="/ressources/cguwatchlist.pdf" target="_blank">CGU</a>
                    <p class="copyright">WatchList © Copyright 2023</p>

                </footer>
    </body>
</html>