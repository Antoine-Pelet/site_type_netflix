<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="{{ asset('style.css') }}" rel="stylesheet"/>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
		{% endblock %}
	</head>

	{% block header %}
		<nav>
			<ul>
				<li>
					<a href="{{ path('app_default') }}"><img src="{{ 'ressources/' ~ 'logofull.png' }}"></a>
				</li>


                {% if app.user %}
					<li>
					<div class="container">
						<div class="row">
							<div class="dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" id="deroulanta" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Séries</a>
								<div class="dropdown-menu" aria-labelledby="deroulanta">
									<a class="dropdown-item" href="{{ path('app_series_index') }}">Toutes les Series</a>
									<a class="dropdown-item" href="{{ path('app_liked_series') }}">Séries likés</a>
									<a class="dropdown-item" href="{{ path('app_view_episodes') }}">Séries regardées</a>
								</div>
							</div>
						</div>
					</div>
				</li>
                -
                <li>
                <a href="{{ path('app_series_index') }}">Utilisateurs</a>
                </li>
                -
                [{{ app.user.name }}]
					<li>
						<a href="{{ path('app_logout') }}">Déconnexion</a>
					</li>
				{% else %}
                    <a class="dropdown-item" href="{{ path('app_series_index') }}">Toutes les Series</a>
                    -
                    <li>
						<a href="{{ path('app_register') }}">Inscription</a>
					</li>
					-
					<li>
						<a href="{{ path('app_login') }}">Connexion</a>
					</li>
				{% endif %}
			</ul>
		</nav>
	{% endblock %}

	{% block body %}{% endblock %}

	{% block footer %}
		<footer>
			<ul class="list-inline">
				<li class="list-inline-item">
					<a href="{{ path('app_default') }}">Accueil</a>
				</li>
				<li class="list-inline-item">
					<a href="">Series</a>
				</li>
				<li class="list-inline-item">
					<a href="">Admin</a>
				</li>
			</ul>
			<a href="/ressources/cguwatchlist.pdf" target="_blank">CGU</a>
			<p class="copyright">WatchList © Copyright 2023</p>
		</footer>
	{% endblock %}

</html>
