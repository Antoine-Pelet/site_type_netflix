{% extends 'base.html.twig' %}

{% block title %}Series
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
	<link href="{{ asset('style.css') }}" rel="stylesheet"/>
	<link href="{{ 'styleShow.css' }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<div class=" container d-flex flex-column">
		<div class="d-flex">
			<div class="d-flex flex-row mt-3">
				<img src="{{ path('app_series_poster', {'id': series.id}) }}">
				<div class="ms-2">
					<div class="d-flex flex-rox justify-content-between mb-1">
						<div class="mb-1">
							<h2>{{ series.title }}</h2>
							<p class="text-secondary">{{ series.yearStart }}
								-
								{{ series.yearEnd  }}</p>
						</div>
						<a href=""><img src="{{ 'ressources/' ~ 'Like.png' }}" alt="petit coeur"></a>
					</div>
					<div class="d-flex flex-row justify-content-between mb-1">
						<div>
							<h4>Genre</h4>
							<p>genre</p>
						</div>
						<div class="mb-1">
							<h4>Note</h4>
							<p>{{ series.rate.value }}</p>
						</div>
					</div>
					<div class="mb-1">
						<h4>Description</h4>
						<p>{{ series.plot }}</p>
					</div>

					<div class="mb-1">
						<h4>Awards</h4>
						<p>{{ series.awards }}</p>
					</div>
				</div>
			</div>
		</div>

		<div class="container d-flex flex-row mt-5">
			<div class="me-3">
				{% set debut = "https://www.youtube.com/embed/" %}
				{% set id = series.youtubeTrailer|split('=') %}
				{% set video = "%s%s" | format(debut, id[1]) %}
				<iframe width="560" height="315" src="{{video}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
			</div>
			<div>
				<div class="row">
					{% set cpt = 1 %}
					{% for s in series.seasons %}
						<div id="accordion">
							<div class="card">
								<div class="card-header">
									<a class="card-link" data-toggle="collapse" href="#collapse{{cpt}}">Saison
										{{cpt}}</a>
								</div>
								{% for epi in s.episodes %}
									<div id="collapse{{cpt}}" class="collapse" data-parent="#accordion">
										<div class="card-body border">
											<p>{{ epi.title }}
												(Episode :
												{{ epi.number }})
												<a href="{{ path('app_series_vu', {'id': epi.id, 'season_id': s.number, 'epi_number': epi.number}) }}">vu</a>
											</p>
										</div>
									</div>
								{% endfor %}
								{% set cpt = cpt + 1 %}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>


		<a href="{{ path('app_series_index') }}">back to list</a>
	{% endblock %}
