{% extends 'base.html.twig' %}

{% block title %}Series index{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('style.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1>Series index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Plot</th>
                <th>Imdb</th>
                <th>Poster</th>
                <th>Director</th>
                <th>YoutubeTrailer</th>
                <th>Awards</th>
                <th>YearStart</th>
                <th>YearEnd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set a_variable = 0 %}
        {% for series in series %}
            {% if a_variable < 30 %}
                <tr>
                    <td>{{ series.id }}</td>
                    <td>{{ series.title }}</td>
                    <td>{{ series.plot }}</td>
                    <td>{{ series.imdb }}</td>
                    <td><img src="{{ path('app_series_poster', {'id': series.id}) }}"></td>
                    <td>{{ series.director }}</td>
                    <td>{{ series.youtubeTrailer }}</td>
                    <td>{{ series.awards }}</td>
                    <td>{{ series.yearStart }}</td>
                    <td>{{ series.yearEnd }}</td>
                    <td>
                        <a href="{{ path('app_series_show', {'id': series.id}) }}">show</a>
                        <a href="{{ path('app_series_edit', {'id': series.id}) }}">edit</a>
                    </td>
                </tr>
            {% endif %}
            {#   
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            #}
            {% set a_variable = a_variable + 1 %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_series_new') }}">Create new</a>
{% endblock %}
