{% extends 'base.html.twig' %}

{% block title %}Search API OMDb
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="{{ asset('style.css') }}" rel="stylesheet"/>
	<link href="{{ asset('styleSeries.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<form method="GET" class="from">
		<input type="text" name='t' id='t' placeholder="Type to search..">
	</form>

	{% if t != '' %}
	
	{{ response.Title }}
	<img src="{{ response.Poster }}" alt="Poster">da</img>

<div class=" container d-flex flex-column">
	<div class="d-flex">
		<div class="d-flex flex-row mt-3">
			<img ="{{response.Poster}}">
			<div class="ms-4 d-flex flex-column justify-content-around">
				<div class="d-flex flex-rox justify-content-between mb-1">
					<div class="mb-1">
						<h2>{{ response.Title }}</h2>
						<p class="text-secondary">{{ response.Year }}</p>
					</div>
				</div>
				<div class="d-flex flex-row justify-content-between mb-1">
					<div>
						<h4>Genre</h4>
						<p>{{ response.Genre }}</p>
					</div>
					<div class="mb-1">
						<h4>Note</h4>
						<p>{{ response.Ratings.0.Value }}</p>
					</div>
				</div>
				<div class="mb-1">
					<h4>Description</h4>
					<p>{{ response.Plot }}</p>
				</div>

				<div class="mb-1">
					<h4>Awards</h4>
					<p>{{ response.Awards }}</p>
				</div>
				<div class="mb-1">
					<h4>IMBD</h4>
					{% set debut = "https://www.imdb.com/title/" %}
					{% set link = "%s%s" | format(debut, response.imdbID) %}
					<a href="{{link}}" class="text-white text-decoration-none">{{ response.imdbID }}</a>
				</div>
			</div>
		</div>
	</div>
</div>
