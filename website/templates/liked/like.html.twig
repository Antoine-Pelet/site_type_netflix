{% extends 'base.html.twig' %}

{% block title %}Series aim√©es{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('style.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1>Series index</h1>    
        <div class="listes">
            {% for s in series %}
                <table class="table">   
                    <th scope="rowgroup">
                        <img src="{{ path('app_series_poster', {'id': s.id}) }}">
                    </th>

                    <tr>
                        <td>
                            {{ s.title }}
                            <a href="{{ path('app_series_show', {'id': s.id}) }}">show</a>
                            {% if app.user %}
                                <td>
                                    <a href="{{ path('app_series_like', {'id': s.id}) }}">like</a>
                                </td>
                            {% endif %}
                        </td>
                    </tr>
                </table>        
            {% endfor %}
        </div>
    
    <div class="navigation">
            {{ knp_pagination_render(series) }}
    </div>

{% endblock %}
