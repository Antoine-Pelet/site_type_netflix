{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="{{ asset('styleRegister.css') }}" rel="stylesheet" />
    <link href="{{ asset('style.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="container-fluid ps-md-0">
        <div class="row g-0 d-flex justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="col-md-9 col-lg-9 mx-auto">
                            <h3 class="login-heading mb-4">Inscrivez-vous!</h3>
                            {{ form_start(registrationForm) }}
                                <div class="form-floating mb-3">
                                    {{ form_row(registrationForm.name) }}
                                    {{ form_errors(registrationForm.name) }}
                                </div>

                                <div class="form-floating mb-3">
                                    {{ form_row(registrationForm.email) }}
                                    {{ form_errors(registrationForm.email) }}
                                </div>

                                <div class="form-floating mb-3">
                                    {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                                    {{ form_errors(registrationForm.plainPassword) }}
                                </div>

                                <div class="form-floating mb-3 pays">
                                    {{ form_row(registrationForm.country) }}
                                    {{ form_errors(registrationForm.country) }}
                                </div>

                                <div class="form-floating mb-3 agree">
                                    {{ form_row(registrationForm.agreeTerms) }}
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </div>

                                <div class="form-floating mb-3">
                                    {{ form_row(registrationForm.captcha) }}
                                    {{ form_errors(registrationForm.captcha) }}
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-lg btn-primary" type="submit">Register</button>
                                    <div class="text-center mt-3">
                                        <span class="small text-secondary">Déjà inscrit ?  </span><a class="small" href=" {{ path('app_login') }} ">Se connecter !</a>
                                    </div>
                                </div>
                            {{ form_end(registrationForm) }}<div class="d-grid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
